<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.bsuir.feedthecat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FeedTheCat">
        <activity
            android:name="by.bsuir.feedthecat.AchievementActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.StatisticsActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.ReferenceActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.SecondActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.FirstActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.MainActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.OneTapActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.ResultActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.MiniGameActivity"
            android:exported="false" />
        <activity
            android:name="by.bsuir.feedthecat.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="by.bsuir.feedthecat.AppWidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_info" />
        </receiver>

    </application>
</manifest>